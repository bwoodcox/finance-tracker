<div class="row mt-2">
  <div class="col-9">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th scope="col">Ticker Symbol</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tracked_stocks.each do |stock| %>
          <tr>
            <th scope="1"><%= stock.ticker %></th>
            <td><%= stock.name %></td>
            <td><%= stock.last_price %></td>
            <td><%= link_to "Remove", user_stock_path(stock), class: "btn btn-sm btn-warning", data: {confirm: "Are you sure you want to remove #{stock.ticker}?"}, method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>