<h1 class="mt-5">My Portfolio</h1>

<div class="search-container">
  <h4>Symbol Search</h4>

  <%= form_tag(search_stock_path, remote: true, method: :get) do %>
    <div class="form-group row">
      <div class="col-sm-9">
        <%= search_field_tag :stock, params[:stock], placeholder: "Enter stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon "search 2x" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div id="results"></div>

<h4 class="mt-4">Your Tracked Stocks</h4>
<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% else %>
  <div class="mt-4">You have no stocks currently being tracked.</div>
<% end %>